//Definir maximos
#define COLUMNAS 10
#define FILAS 10

//Imprimir tablero inicial
void imprimir_tablero (char tablero1 [COLUMNAS] [FILAS])
{
    //    imprime_scoreboard();

//CONTADORES
    int i, j;
    system("COLOR 1A");
    int k;
//CONTADOR RENGLONES

    printf("        ");
    for(k=1; k<9; k++)
    {

        printf("%i ", k);
    }

    printf("\n");

    for (i=0; i<COLUMNAS; i++)
    {
        printf("       %c ", 'A'+i);
        //CONTADOR COLUMNAS
        for (j=0; j<FILAS; j++)
        {

            //IMPRIME LA MATRIZ

            printf("%c ", tablero1[i][j]);

        }
        //IMPRIME SALTO DE LINEA
        printf("\n");
    }

}

